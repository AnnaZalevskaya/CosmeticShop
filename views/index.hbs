  <div class="main">
    <img
      src="https://downloader.disk.yandex.ru/preview/6cb829b1685ab97e4e86811f8c7b11f989840efe99e192876cf9e553724adadf/629a5fbd/nQWVSgXklY1fWUPVR7BpoJuFJw4PXCE35cmr9IysMXMlpdEASoXkaZEV1whx3G71C-SiqJNWdmTbwcJrrrS2Cw%3D%3D?uid=0&filename=decor-line.png&disposition=inline&hash=&limit=0&content_type=image%2Fpng&owner_uid=0&tknv=v2&size=1870x903"
      width="100%" height="150">
    <div class="nav">
      <ul class="pages">
        {{#each users}}
        <div class="col-products">
          <div class="row">
            <div class="col-sm-4">
              <div class="product">
                <div class="product-img">
                  <img class="img-pr" src="{{this.Изображение}}" border-radius="10%" width="200px" height="200px">
                </div>
                <p class="product-title">
                  <a href="/product_form/{{this.id}}">{{this.Тип}}<br>{{this.Название}}</a>
                </p>
                <p class="product-desc">{{this.Бренд}}</p>
                <p class="product-price"><b>{{this.Стоимость}} BYN</b></p>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
    </div>
    <br>
     <form method="GET" action="?">
     <div class="pagination_section">
       <script>
         "use strict";
        var articleDiv = document.querySelector("div.pagination_section");
        let fragment = document.createDocumentFragment(); 
        const amount = {{pageCount}}; 
        for (let i = 1; i <= amount; i++) {
          let url = document.createElement('a');
          let span = document.createElement('span');
        span.innerHTML = i;
        url.href = '/page/' + i + '/' + amount;
        url.appendChild(span);
  
        fragment.appendChild(url);
      }
      articleDiv.appendChild(fragment);
       </script>
    </div>
    </form>
  </div>

