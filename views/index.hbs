  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">
  <link rel="icon" href="https://downloader.disk.yandex.ru/preview/6d9f2328d234691a64cc6b144756c06e61d0e8655fb5377b77bbb6c0fede3b7f/629a7c24/oveAGrdQE6NhI3BLOuStl6BtUjPQvI4yFN81_naUQvf710iB4A7JhhrB_jxAV_D8cYqzdjdRn8o-3e2YIUqvBg%3D%3D?uid=0&filename=lotos-preview.png&disposition=inline&hash=&limit=0&content_type=image%2Fpng&owner_uid=0&tknv=v2&size=1870x903">
  <style>
    .page-light {
      background-color: #cafaf2;
      font-family: 'Montserrat', sans-serif;
      font-size: 16pt;
    }
    .wrapper {
      max-width: 1110 px;
      margin: 0 auto;
    }
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .nav {
      display: flex;
      list-style-type: none;
      padding-left: 0;
      align-items: center;
    }
    .logo {
      justify-content: center;
    }
    .nav-item {
      margin-left: 52px;
      margin-right: 52px;
    }
    .nav-link,.my-button-1 {
      color: #ffb3db;
      text-decoration: none;
    }
    .main {
      background-image: url(https://sun9-east.userapi.com/sun9-32/s/v1/ig2/aOGRrn8vToVzZqRqV2u5tveD2Kj-WHOFyTL9a-eAGSxL3-u-kaHss8b_S0KpJqMdU0TsmwDcWuSIaM6iqLNSY_gC.jpg?size=2560x1600&quality=95&type=album);
    }
    .page-dark {
      background-color: #212121;
    }
    .footer {
      display: flex;
      justify-content:flex-end;
    }
    .footer-nav {
      display: flex;
      justify-content: flex-end;
      color: #fff;
    }
    .footer-list1 {
      list-style-type: none;
      padding-right: 10%;
    }
    .footer-list2 {
      list-style-type: none;
      padding-right: 25%;
    }
    /* Оформление панели */
    #side-checkbox {
      display: none;
    }
    .side-panel {
      position: fixed;
      z-index: 999999;
      top: 0;
      left: -360px;
      background: #cafaf2;
      transition: all 0.5s;
      width: 320px;
      height: 100vh;
      box-shadow: 10px 0 20px rgba(0, 0, 0, 0.4);
      color: black;
      padding: 40px 20px;
    }
    .side-title {
      font-size: 20px;
      padding-bottom: 10px;
      margin-bottom: 20px;
      border-bottom: 2px solid #BFE2FF;
    }
    /* Переключатели кнопки 1 */
    .side-button .side-close {
      display: none;
    }
    #side-checkbox:checked+.side-panel+.side-button-1-wr .side-button .side-open {
      display: none;
    }
    #side-checkbox:checked+.side-panel+.side-button-1-wr .side-button .side-close {
      display: block;
    }
    #side-checkbox:checked+.side-panel {
      left: 0;
    }
    .shadow-text {
      color: black;
      /* Цвет  текста */
      font-size: 24pt;
      /* Размер  текста */
      font-weight: bold;
      padding: 0px 0px;
      /*  text-transform: uppercase;*/
      line-height: 1;
      -webkit-transition: all 0.5s ease;
      transition: all 0.5s ease;
    }
    .shadow-text:hover {
      color: #f1acea;
      /* Меняем цвет текста */
      -webkit-text-shadow: 2px 2px 2px black;
      -moz-text-shadow: 2px 2px 2px black;
      text-shadow: 2px 2px 2px black;
    }
    .catalog-list, .makeup {
      text-decoration: none;
      color: black;
      background-color: transparent;
      cursor: pointer;
    }
    .makeup{
      padding-left: 5%;
    }
    /*Окно товара*/
    .col-products{
      display: inline-flex;
      margin-top:10px;
    }
    .content {
      margin-top: 50px;
    }
    .product {
      background: #cafaf2 none repeat scroll 0 0;
      border: 1px solid #c0c0c0;
      height: 390px;
      width: 270px;
      overflow: hidden;
      padding: 25px 15px;
      position: relative;
      text-align: center;
      transition: all 0.5s ease 0s;
      margin-bottom: 20px;
      margin-right: 20px;
      margin-left: 30px;
    }
    .product:hover {
      box-shadow: 0 0 16px rgba(0, 0, 0, 0.5);
    }
    .product-img {
      height: 200px;
      width: 200px;
      padding-left: 12%;
    }
    .img-pr{
      border-radius: 10%;
    }
    .product-title a {
      color: black;
      font-weight: 500;
      text-transform: uppercase;
      text-decoration: none;
    }
    .product-desc {
      max-height: 30px;
      overflow: hidden;
    }
    .product-price {
      bottom: 15px;
      left: 0;
      position: absolute;
      width: 100%;
      color: #ffb3db;
      font-size: 18px;
      font-weight: 500;
    }
    /*Пагинация*/
    .pagination_section {
      position: relative;
      padding-bottom: 3%;
      padding-left: 35%;
    }
    .pagination_section a{
      text-decoration: none;
      margin-left: 5px;
      margin-right: 5px;
      font-size: 18px;
      color: #212121;
    }
    .pagination_section a:hover:not(.active) {
      background-color: #031F3B;
      color: white;
      padding: 5px 5px;
      text-decoration: none;
    }
  </style>
</head>

<body>
